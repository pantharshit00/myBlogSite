<!doctype html>
<html>

<head>
    <% include ./partials/head %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-markdown/2.10.0/css/bootstrap-markdown.min.css" />
</head>

<body>
    <% include ./partials/header %>
        <div class="container">
            <h1>Create a new article</h1>
            <hr>
            <form method="post" action="/admin/create_new?token=<%= secret %>">
                <div class="form-group">
                    <label><h3>Title</h3></label>
                    <input type="text" class="form-control" placeholder="Title goes here..." name="title">
                </div>

                <div class="form-group">
                    <label><h3>Preview Text</h3></label>
                    <textarea id="preview" data-iconlibrary="fa" data-provide="markdown" style="height:200px" name="preview" placeholder="Preview goes here..."
                        class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <label><h3>Content</h3></label>
                    <textarea id="content" data-iconlibrary="fa" data-provide="markdown" style="height:200px" name="content" placeholder="Content goes here..."
                        class="form-control"></textarea>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="submit">
                </div>

            </form>
        </div>
        <% include ./partials/footer %>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-markdown/2.10.0/js/bootstrap-markdown.min.js"></script>
            <script>
                $(function () {
                    $("#preview").markdown();
                    $("#content").markdown();
                })
            </script>
</body>

</html>